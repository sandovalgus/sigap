<p id="notice"><%= notice %></p>
<div class="well form-horizontal">
  <div class="form-group">
    <div class="col-md-4">Grado de Formación: </div>
    <div class="col-md-4">
      <div class="input-group">
        <%= @academic.academic_training %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-4">Estado: </div>
    <div class="col-md-4">
      <div class="input-group">
        <%= @academic.status%>
      </div>
    </div>
  </div>

  <p>Periodo de tiempo</p>
  <div class="form-group">
    <div class="col-md-4">Desde el año: </div>
    <div class="col-md-1">
      <div class="input-group">
        <%= @academic.start_data %>  
      </div>
    </div>

    <div class="col-md-2">Hasta el año: </div>
    <div class="col-md-1">
      <div class="input-group">
        <%= @academic.finish_data %>  
      </div>
    </div>
  </div>


  <div class="form-group">
    <div class="col-md-4">Establecimiento: </div>
    <div class="col-md-4">
      <div class="input-group">
        <%= @academic.establishment %>
      </div> 
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-4">Disciplina/Orientación: </div>
    <div class="col-md-4">
      <div class="input-group">
        <%= @academic.discipline %>
      </div> 
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-4">Descripción: </div>
    <div class="col-md-4">
      <div class="input-group">
        <%= @academic.description %>
      </div> 
    </div>
  </div>
</div>